# LinkedIn Ghost Jobs ETL Pipeline - Environment Configuration

# Environment Settings
ENVIRONMENT=development
DEBUG=True
TEST_MODE=False

# Database Configuration (SQLite)
DB_NAME=ghost_jobs.db

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/callback

# Greenhouse API Configuration
GREENHOUSE_API_KEY=your_greenhouse_api_key
GREENHOUSE_RATE_LIMIT=100

# Lever API Configuration
LEVER_API_KEY=your_lever_api_key
LEVER_RATE_LIMIT=100

# Adzuna API Configuration
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_APP_KEY=your_adzuna_app_key
ADZUNA_RATE_LIMIT=200

# Web Scraping Configuration
SCRAPE_DELAY=2.0
MAX_RETRIES=3
SCRAPE_TIMEOUT=30
HEADLESS_BROWSER=True
MAX_PAGES_PER_SOURCE=2

# Ghost Job Detection Parameters
GHOST_JOB_MAX_DAYS=45
MIN_DESCRIPTION_LENGTH=30
MIN_KEYWORD_COUNT=2
REPOST_THRESHOLD_DAYS=7
GHOST_SCORE_THRESHOLD=40

# Performance Configuration
BATCH_SIZE=100
MAX_WORKERS=4
CHUNK_SIZE=1000
MEMORY_LIMIT_MB=2048
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600

# Feature Flags
ENABLE_LINKEDIN=True
ENABLE_ADVANCED_ANALYTICS=True
ENABLE_FINNISH_ANALYSIS=True
ENABLE_VISUALIZATION=True